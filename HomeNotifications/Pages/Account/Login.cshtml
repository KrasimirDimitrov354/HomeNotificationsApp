@page
@model HomeNotifications.Web.Pages.Account.LoginModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for=UserLoginModel.Username>Username</label>
                <input asp-for="UserLoginModel.Username" class="form-control">
                <span asp-validation-for="UserLoginModel.Username" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=UserLoginModel.Password>Password</label>
                <input type="password" asp-for="UserLoginModel.Password" class="form-control">
                <span asp-validation-for="UserLoginModel.Password" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}